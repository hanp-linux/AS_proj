<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hanp.jnidemo.MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/bt_ledAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LED ALL ON/OFF"
        />

    <CheckBox
        android:id="@+id/cb_led0"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="LED0 ON/OFF"
        />
    <CheckBox
        android:id="@+id/cb_led1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="LED1 ON/OFF"
        />
    <CheckBox
        android:id="@+id/cb_led2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="LED2 ON/OFF"
        />
    <CheckBox
        android:id="@+id/cb_led3"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="LED3 ON/OFF"
        />


</LinearLayout>
